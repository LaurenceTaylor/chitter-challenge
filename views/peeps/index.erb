<h1>Chitter</h1>
<% if @logged_in %>
<h3>Welcome, <%= @name %></h3>
<% end %>

<% if !@logged_in %>
<form action='login/new' method='get'>
  <input type='submit' value='Log in'/>
</form>
<% end %>

<form action='/users/signup' method='get'>
  <input type='submit' value='Sign up'/>
</form>

<% @peeps.each do |peep| %>
  <article>
  <br>
  <% user = peep.user_info %>
  <%= user['name'] %> @<%= user['username'] %>
  <br>
  <%= peep.text  %>
  <br>
  <%= peep.time %>
  <br>
  </article>
<% end %>
<br>

<% if @logged_in %>
<form action='/peeps/post' method='get'>
  <input type='submit' value='Post'/>
</form>
<% end %>
